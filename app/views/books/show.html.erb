<h2>書籍詳細</h2>
<p>ID:<%= @book.id %></p>
<p>書籍名:<%= @book.name %></p>
<p>価格:<%= @book.price %></p>
<p>出版社:<%= @book.publish %></p>
<p>刊行日:<%= @book.publish_date %></p>
<hr>
<%= link_to '編集する',edit_book_path(@book) %>
<%= link_to '削除する',book_path(@book),method: :delete %>

<h3>レビュー一覧</h3>
<% @book.reviews.each do |review| %>
    <li><%= review.body %></li>
<% end %>

<h3>レビュー投稿</h3>
<%= render partial: "new_review" ,locals:{ review: Review.new(book_id:@book.id)}%>